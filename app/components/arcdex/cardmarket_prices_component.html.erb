<% if prices_object.present? %>
  <div class="cardmarket-prices mb-4">
    <%= link_to document.cardmarket_url, target: '_blank' do %>
      <div class="d-flex">
        <h4><%= t('.header') %></h4>
        <div class="ms-1"><%= render Arcdex::Icons::LinkOutComponent.new %></div>
      </div>
    <% end %>
    <small><%= last_updated_at %></small>
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col"><%= t('.price_type') %></th>
          <th scope="col"><%= t('.price') %></th>
        </tr>
      </thead>
      <tbody>
        <% all_price_types.each do |price_type| %>
          <tr>
            <td class="font-weight-bold"><%= price_type.humanize %></td>
            <td>
              <%= prices_object[price_type].positive? ? format_price(prices_object[price_type]) : "-" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
