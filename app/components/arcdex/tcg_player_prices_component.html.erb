<% if prices_object.present? %>
  <div class="tcg-player-prices mb-4">
    <%= link_to document.tcg_player_url, target: '_blank' do %>
      <div class="d-flex">
        <h4><%= t('.header') %></h4>
        <div class="ms-1"><%= render Arcdex::Icons::LinkOutComponent.new %></div>
      </div>
    <% end %>
    <small><%= last_updated_at %></small>
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col"><%= t('.price_type') %></th>
          <% prices_object.each do |card_type, prices| %>
            <th scope="col"><%= card_type.humanize %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% all_price_types.each do |price_type| %>
          <tr>
            <td class="font-weight-bold"><%= price_type.titleize %></td>
            <% prices_object.each do |card_type, prices| %>
              <td>
                <%= prices[price_type] ? format_price(prices[price_type]) : "-" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
