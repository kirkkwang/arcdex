<% if prices_object.present? %>
  <div class="tcg-player-prices">
    <h4><%= t('.header') %></h4>
    <small><%= last_updated_at %></small>
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col"><%= t('.card_type') %></th>
          <% all_price_types.each do |price_type| %>
            <th scope="col"><%= price_type.titleize %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% prices_object.each do |card_type, prices| %>
          <tr>
            <td class="font-weight-bold"><%= card_type.humanize %></td>
            <% all_price_types.each do |price_type| %>
              <td>
                <%= prices[price_type] ? format_price(prices[price_type]) : "-" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">
    <p class="mb-0"><%= t('.no_pricing_data_available') %></p>
  </div>
<% end %>
